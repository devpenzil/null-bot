{
    "private": true,
    "name": "nullbot-monorepo",
    "workspaces": [
        "app/nullbot",
        "app/*",
        "packages/*"
    ],
    "scripts": {
        "start": "yarn workspace null-bot start"
    },
    "dependencies": {
        "turbo": "^1.0.9"
    },
    "turbo": {
        "baseBranch": "origin/main",
        "pipeline": {
          "build": {
            "dependsOn": ["^build"],
            "outputs": [".next/**"]
          },
          "test": {
            "dependsOn": ["^build"],
            "outputs": []
          },
          "lint": {
            "outputs": []
          },
          "dev": {
            "cache": false
          },
          "deploy": {
            "dependsOn": ["build"]
          }
        }
      }
}
